@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src='https://meet.jit.si/external_api.js'></script>
    <style>
        a:hover {
            color: white;
            text-decoration: none;
        }

        .button1 {
            padding: 15px 50px;
            font-size: 40px;
            text-align: center;
            cursor: pointer;
            outline: none;
            color: #fff;
            background-color: #4CAF50;
            border: none;
            border-radius: 15px;
        }

            .button1:hover {
                background-color: #3e8e41;
            }

            .button1:active {
                background-color: #215c23;
            }

        body {
            background-color: powderblue;
        }

        h1 {
            display: block;
            margin-left: auto;
            margin-right: auto;
            margin-top: 250px;
            margin-bottom: auto;
        }

        p {
            margin-top: 20px;
            margin-bottom: auto;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="text-center">
            <h1 style="font-size:10vw" class="display-4">Esperando</h1>
            <p style="font-size:2vw">Lorem ipsum dolor sit amet consectetur adipiscing elit inceptos dui diam curabitur.</p>
            <form action='@Url.Action("Call", "Home")' method="get">
                @if (ViewBag.id != null)
                {
                    <input type="hidden" name="Valor" value="@ViewBag.id" />
                }
                else
                {
                    <input type="text" name="Valor" value="">
                }
                <br /><br /><button type="submit" class="button1">Ir id</button>

            </form>
            
        </div>
    </div>
</body>
</html>